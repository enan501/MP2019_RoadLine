<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="200dp" android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical">
    <androidx.cardview.widget.CardView android:layout_width="190dp" android:layout_height="190dp"
                                       android:layout_gravity="center" app:cardCornerRadius="95dp"
                                       app:cardElevation="0dp">


        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackAlpha"
            android:visibility="invisible"/>
        <TextView android:id="@+id/PDItem_day" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:layout_gravity="center"
                  android:background="@drawable/grad2"
                  android:gravity="center"
                  android:text="DAY 1"
                  android:textColor="@color/white"
                  android:textSize="32dp"/>


    </androidx.cardview.widget.CardView>

    <TextView android:id="@+id/PDItem_date" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center"
              android:padding="20dp"
              android:text="2019.02.15"
              android:textColor="@color/places_autocomplete_prediction_secondary_text"
              android:textSize="26dp"/>

</LinearLayout>