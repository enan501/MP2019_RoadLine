<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="200dp"
                                    android:layout_height="260dp" xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical">
    <androidx.cardview.widget.CardView android:layout_width="190dp" android:layout_height="190dp"
                  app:cardElevation="0dp" app:cardCornerRadius="95dp" android:layout_gravity="center">


        <ImageView
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/img_cover"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackAlpha"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/PDItem_day" android:textSize="32dp"
                  android:gravity="center"
                  android:background="@drawable/grad2"
                  android:text="DAY 1"
                  android:textColor="@color/white"
                  android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/PDItem_date" android:textSize="26dp"
              android:padding="20dp"
              android:textColor="@color/places_autocomplete_prediction_secondary_text"
              android:gravity="center"
              android:text="2019.02.15"/>
</LinearLayout>