<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout

            android:id="@+id/money_layout1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/colorPrimary">

        <ImageView
                android:id="@+id/money_Item_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <ImageView
                android:background="@color/blackAlpha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/money_Item_textView"
                android:text="1000ì›"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
            android:id="@+id/money_layout2"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="500dp"
            android:layout_height="130dp"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAY1"
                android:textSize="47sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.05.03"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/money_layout3"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="500dp"
            android:layout_height="130dp"
            android:orientation="vertical">
    </LinearLayout>
</LinearLayout>


</android.support.v7.widget.CardView>