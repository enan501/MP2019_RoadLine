<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.money.ShowMoneyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="0">
        <LinearLayout
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end" android:orientation="horizontal">
            <TextView
                android:id="@+id/deleteText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="center" android:text="수정하기"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content" android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_delete"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cccccc" />


    <ScrollView
        android:layout_weight="1"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/money_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:padding="20dp"
        android:gravity="end|center_vertical"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money_totalTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanum_square_round_r"
            android:gravity="center"
            android:textColor="@color/darkGray"
            android:text="Total 0"
            android:textSize="25sp" />
        <Spinner
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/currencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanum_square_round_r" />

        <ImageView
            android:id="@+id/detail_money"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/sum" />
    </LinearLayout>
</LinearLayout>
