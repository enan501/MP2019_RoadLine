<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AL_text"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_gravity="start|top"
        android:text="여행 추가"
        android:textSize="30sp" />

    <EditText
        android:cursorVisible="false"
        android:id="@+id/AL_title"
        android:inputType="text"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="  여행 제목을 입력하세요  "
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화폐"
            android:textSize="25sp" />

        <!--<TextView-->
            <!--android:id="@+id/curEditButton"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginHorizontal="10dp"-->
            <!--android:gravity="center"-->
            <!--android:text="추가하기"-->
            <!--android:textColor="@color/colorPrimaryDark"-->
            <!--android:textSize="15sp" />-->

        <Spinner
            android:id="@+id/currencySpinner"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanum_square_round_r"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/curText0"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="KRW"
            android:textColor="@color/darkGray"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/curText1"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/curText2"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/curText3"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/curText4"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="여행 날짜"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/darkGray"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_weight="0"
                android:text="시작일" />

            <TextView
                android:id="@+id/editStart"
                android:textColor="@color/lightGray"
                android:text="시작일 입력하기"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:textColor="@color/darkGray"
                android:layout_width="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="종료일" />

            <TextView
                android:id="@+id/editEnd"
                android:textColor="@color/lightGray"
                android:textSize="20sp"
                android:text="종료일 입력하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="10"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>