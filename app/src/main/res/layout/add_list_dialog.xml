<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_gravity="center">

    <EditText
        android:id="@+id/AL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:cursorVisible="false" android:gravity="center"
        android:hint="  여행 제목을 입력하세요  " android:inputType="text"
        android:padding="10dp" android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:text="화폐" android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/curText0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AL_title"/>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/currencySpinner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" app:layout_constraintTop_toTopOf="@+id/textView4">


    </com.toptoche.searchablespinnerlibrary.SearchableSpinner>


    <TextView
        android:id="@+id/curText0"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background" android:gravity="center"
        android:paddingHorizontal="15dp"
        android:text="KRW" android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/curText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
        android:id="@+id/curText1"
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:gravity="center" android:paddingHorizontal="15dp"
        android:textSize="17sp" android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/curText0"
        app:layout_constraintEnd_toStartOf="@+id/curText2"
        app:layout_constraintStart_toEndOf="@+id/curText0"/>

    <TextView
        android:id="@+id/curText2"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:gravity="center" android:paddingHorizontal="15dp"
        android:textSize="17sp" android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/curText0"
        app:layout_constraintEnd_toStartOf="@+id/curText3"
        app:layout_constraintStart_toEndOf="@+id/curText1"/>


    <TextView
        android:id="@+id/curText3"
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:gravity="center" android:paddingHorizontal="15dp"
        android:textSize="17sp" android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/curText0"
        app:layout_constraintEnd_toStartOf="@+id/curText4"
        app:layout_constraintStart_toEndOf="@+id/curText2" app:layout_constraintTop_toTopOf="@+id/curText1"
    />

    <TextView
        android:id="@+id/curText4"
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:gravity="center" android:paddingHorizontal="15dp"
        android:textSize="17sp" android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/curText0"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/curText3"
    />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="여행 날짜" android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curText0"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="10dp" android:text="시작일"
        android:textColor="@color/darkGray" app:layout_constraintEnd_toStartOf="@+id/editStart"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <TextView
        android:id="@+id/editStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="시작일 입력하기"
        android:textColor="@color/lightGray"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="10dp" android:text="종료일"
        android:textColor="@color/darkGray" app:layout_constraintEnd_toStartOf="@+id/editEnd"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/editStart"/>

    <TextView
        android:id="@+id/editEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="종료일 입력하기"
        android:textColor="@color/lightGray"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"/>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp" android:text="대표 사진"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEnd"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:scaleType="centerCrop" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" app:srcCompat="@drawable/ml_default_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>