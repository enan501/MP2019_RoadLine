<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.date.PickDateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/grad1"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/PD_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/PD_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanum_square_round_r"
            android:gravity="center"
            android:text="대만여행"
            android:textColor="@color/white"
            android:textSize="36sp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/PD_rView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="2.5"
        android:paddingTop="30dp"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/PD_photoBtn"
            android:layout_width="55dp"
            android:layout_height="0dp"
            android:layout_gravity="right|center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/album_icon" />

        <ImageView
            android:id="@+id/PD_moneyBtn"
            android:layout_width="55dp"
            android:layout_height="0dp"
            android:layout_gravity="right|center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/money_icon" />


    </LinearLayout>

</LinearLayout>
