<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context=".UI.photo.ShowPhotoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end" android:orientation="horizontal">
            <TextView
                android:id="@+id/deleteText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="center" android:text="수정하기"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content" android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_delete"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <ScrollView
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/photo_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
